# Device Specific Board Configuration
CONFIG_BOARD_APOLLO=y

# Touchscreen
CONFIG_TOUCHSCREEN_NT36xxx_HOSTDL_SPI=y
# CONFIG_TOUCHSCREEN_NVT_DEBUG_FS is not set
CONFIG_SPI_XIAOMI_TP=y

# Fingerprint
CONFIG_FINGERPRINT_FPC_TEE=y

# Enable PM8008 Regulator
CONFIG_REGULATOR_PM8008=y

# Enable MI US Proximity sensor
CONFIG_US_PROXIMITY=y

# Enable GPIO Testing driver
CONFIG_GPIO_TESTING_MODE=y

# Power supply drivers
CONFIG_BQ2597X_CHARGE_PUMP=y
CONFIG_BATT_VERIFY_BY_DS28E16=y
CONFIG_ONEWIRE_GPIO=y

# UFS features
CONFIG_FS_HPB=y
CONFIG_UFSFEATURE_31=y
CONFIG_UFSHPB_31=y
CONFIG_UFSTW_31=y
CONFIG_UFSTW_IGNORE_GUARANTEE_BIT_31=y

# Mi features
CONFIG_MIHW=y
CONFIG_MILLET=y
CONFIG_BINDER_OPT=y
